{
    "name": "Custom TipTap Styles",
    "alias": "NordexFood.CustomTiptapStyles",
    "extensions": [
        {
            "type": "tiptapToolbarExtension",
            "kind": "styleMenu",
            "alias": "NordexFood.Tiptap.CustomStyleMenu",
            "name": "Custom Tiptap Style Menu",
            "meta": {
                "alias": "customStyleMenu",
                "icon": "icon-palette",
                "label": "Style Select"
            },
            "items": [
                {
                    "label": "Headings",
                    "items": [
                        {
                            "label": "Heading 2",
                            "data": { "tag": "h2" },
                            "appearance": { "icon": "icon-heading-2", "style": "font-size: x-large; font-weight: 600;"}
                        },
                        {
                            "label": "Heading 3",
                            "data": { "tag": "h3" },
                            "appearance": { "icon": "icon-heading-3","style": "font-size: large;" }
                        },
                        {
                            "label": "Heading 4",
                            "data": { "tag": "h4"},
                            "appearance": { "icon": "icon-heading-4","style": "font-size: medium;"}
                        }
                    ]
                },
                {
                    "label": "Text Sizes",
                    "items": [
                        {
                            "label": "Large Text",
                            "data": { "tag": "span", "class": "font-size-large" },
                            "appearance": { "style": "font-size: 1.25rem; font-weight: 600;", "icon": "icon-height" }
                        },
                        {
                            "label": "Extra Large Text",
                            "data": { "tag": "span", "class": "font-size-30" },
                            "appearance": { "style": "font-size: 1.875rem; font-weight: 700;", "icon": "icon-height" }
                        }
                    ]
                },
                {
                    "label": "Containers",
                    "items":[
                        {
                            "label": "blockquote",
                            "data": { "tag": "blockquote", "class": "custom-blockquote" },
                            "appearance": { "icon": "icon-blockquote", "style": "font-style: italic; border-left: 4px solid #ccc; margin-left: 0; padding-left: 1em;" }
                        }
                    ]

                }
            ]
        }
    ]
}
